#!/usr/bin/env sh
# This script converts the mnist data into lmdb/leveldb format,
# depending on the value assigned to $BACKEND.
set -e

EXAMPLE=examples/snsd_classify
DATA=examples/snsd_classify/snsd_data
BUILD=/home/akentu/caffe/build/tools

BACKEND="leveldb"

echo "Creating ${BACKEND}..."

rm -rf snsd_data/snsd_classify_train_leveldb
rm -rf snsd_data/snsd_classify_test_leveldb

$BUILD/convert_imageset snsd_data/ train.txt snsd_classify_train_leveldb 1 -backend leveldb 64 64

$BUILD/convert_imageset snsd_data/ test.txt snsd_classify_test_leveldb 1 -backend leveldb 64 64
echo "Done."
